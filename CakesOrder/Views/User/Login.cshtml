@using CakesOrder.Models;
@model User

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login Form";
}
<div id="login">
    
<partial name="MainHeading" />
<br /><br /><br />
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form  asp-controller="User" asp-action="Login"  method="post" >
                        <div class="mb-1">
                            <label asp-for="Name" >User Name</label>
                            <input asp-for="Name" class="form-control" id="exampleInputEmail1">
                            <span asp-validation-for="Name" class ="errors" ></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" id="exampleInputPassword1">
                            <span asp-validation-for="Password" class ="errors" ></span>
                            
                            <span class ="errors">@ViewBag.validation</span>
                        </div>
                          <br /> 
                        <button type="submit" class="btn btn-secondary">Login</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<br /><br />